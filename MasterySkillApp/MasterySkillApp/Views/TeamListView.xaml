<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterySkillApp.Views.TeamListView">
    <ContentPage.Content>

        <StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="End" Padding="10,0,0,0">
                <Button Image="IconFilterBlack.png" HeightRequest="48" WidthRequest="40" BackgroundColor="Transparent"/>
                <SearchBar Placeholder="Buscar por nombre..." TextChanged="SearchBar_TextChanged" HeightRequest="48"/>
                
            </StackLayout>
            
            <ListView x:Name="ListUserTeam" ItemSelected="ListUsersBadges_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="ImgUserCircle.png"
                               Text="{Binding userFullName}"
                               TextColor="{StaticResource DarkGrayColor}"
                               Detail="{Binding userFullDetail}"
                               DetailColor="{StaticResource RedAppColor}"/>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
        

    </ContentPage.Content>
</ContentPage>