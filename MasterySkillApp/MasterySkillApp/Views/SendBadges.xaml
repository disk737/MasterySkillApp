<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterySkillApp.Views.SendBadges"
             Title="{Binding userName}">
    
    <ContentPage.Content>
        
        <ListView x:Name="ListSendBadges" ItemSelected="ListSendBadges_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="ImgBadgeTest.png"
                           Text="{Binding badgeName}"
                           Detail="{Binding badgeText}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </ContentPage.Content>
    
</ContentPage>